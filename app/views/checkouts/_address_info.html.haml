%p.general-address
  #{address.first_name} #{address.last_name}
  = link_to t(:edit), confirm_checkout_path(status: :address), method: :put, class: 'general-edit'
  %br
  = address.address
  %br
  #{address.city} #{address.zip}
  %br
  = ISO3166::Country.find_country_by_alpha2(address.country)
  %br
  = t(:phone_number, number: address.phone)
