.general-cart-item.divider-lg
  .general-img-wrap-table
    = image_tag order_item.book.main_image_url(:small), class: 'img-shadow general-thumbnail-img'
  %p.title= order_item.book.title
  %P.in-grey-600.fw-300= order_item.book.decorate.short_description
  %table.table
    %tr
      %td
        %span.in-grey-600= t(:price_label)
      %td
        %span.font-16.in-gold-500= t(:price, money: order_item.book.price)
    %tr
      %td.vertical-middle
        %span.in-grey-600= t(:quantity)
      %td
        %span= order_item.quantity
    %tr
      %td
        %span.in-grey-600= t(:sub_total)
      %td
        %span.font-16.in-gold-500= t(:price, money: order_item.book.price * order_item.quantity)
