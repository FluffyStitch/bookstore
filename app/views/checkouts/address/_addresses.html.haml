= simple_form_for(:order, url: checkout_path, method: :put, remote: true, html: { class: 'res-mb-100' }) do |f|
  .row
    .col-md-5.mb-40
      #billing_address_form
        = render partial: 'checkouts/address/address_form', locals: { f: f, address_form: billing_address_form }
    .col-md-5.col-md-offset-1.mb-60
      #shipping_address_form{ disabled: 'disabled' }
        = render partial: 'checkouts/address/address_form', locals: { f: f, address_form: shipping_address_form }
      .form-group.checkbox
        %label.checkbox-label
          = check_box_tag 'order[use_billing]', '1', false, class: 'checkbox-input', hidden: 'true'
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text= t(:use_billing_address)
  = render partial: 'checkouts/price', locals: { presenter: presenter }
  .text-center
    = f.submit t(:save_and_continue), class: 'btn btn-default center-block mb-20'
