%main.container.general-main-wrap
  .text-center
    %h2= t(:new_password)
  .general-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.hidden_field :reset_password_token
      .form-inputs
        = f.input :password, required: true, input_html: { autocomplete: "new-password" }, placeholder: t('placeholder.new_password')
        = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, placeholder: t('placeholder.confirm_password')
      .text-center
        .actions
          = f.submit t(:change), class: 'btn btn-default mb-20'
