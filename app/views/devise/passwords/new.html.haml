%main.container.general-main-wrap
  .text-center
    %h1.mb-30= t(:forgot_password)
    %p.general-password-text= t(:send_email)
  .general-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .form-group.mb-25
        = f.input :email, autofocus: true, autocomplete: 'email', placeholder: t('placeholder.enter_email'), input_html: { class: 'form-control' }
      .text-center
        .actions
          = f.submit t(:email_instructions), class: 'btn btn-default mb-20'
        = link_to t(:cancel), new_session_path(resource_name), class: 'in-gold-500 mb-20'
