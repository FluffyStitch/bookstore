%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t(:log_in)
    = link_to omniauth_authorize_path(User, :github), class: 'general-login-icon', method: :post do
      %i.fa.fa-github-square
    %p.general-login-text or
  .general-form
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control' } }) do |f|
      .form-inputs
        = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, placeholder: t('placeholder.enter_email')
        = f.input :password, required: true, input_html: { autocomplete: "current-password" }, placeholder: t('placeholder.password')
        = link_to t(:forgot_password), new_user_password_path, class: 'help-block in-gold-500'
        .form-group.checkbox.text-center.mb-30
          %label.checkbox-label
            = f.check_box :remember_me, class: 'checkbox-input', hidden: true
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text= t(:remember)
      .form-actions
        .text-center
          = f.submit t(:log_in), class: 'btn btn-default mb-20'
  .text-center
    %p.general-sign-text.text-center
      = t(:not_have_account)
      = link_to t(:sign_up), new_user_registration_path, class: 'in-gold-500', id: 'sign_up'
