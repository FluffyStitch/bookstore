%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            %a.nav-link{href: root_path}= t('footer.home')
          %li
            %a.nav-link{href: books_path}= t('footer.shop')
          %li
            %a.nav-link{href: "#"}= t('footer.orders')
          %li
            %a.nav-link{href: "#"}= t('footer.settings')
      .col-sm-3
        %p.general-nav-mail= t(:email)
        %p.general-nav-number= t(:number)
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
