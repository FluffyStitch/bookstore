%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      - @latest.each_with_index do |book, index|
        %li{ class: "#{'active' if index.zero?}", 'data-target': "#slider", 'data-slide-to': index.to_s }
    .carousel-inner{role: "listbox"}
      - @latest.each_with_index do |book, index|
        .item{ class: "#{'active' if index.zero?}" }
          .row
            .col-sm-5
              .general-img-wrap
                = image_tag book.main_image_url
            .col-sm-7
              .mb-60
                %h1= book.title
                %p.lead= book.short_description
                %p.lead.small= book.all_authors
                .general-align
                  = link_to t(:buy_now), cart_path(order: { order_item: { book_id: book.id, quantity: 1 } }), method: :put, class: 'button btn btn-primary'
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only= t(:prev)
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only= t(:next)
.container
  .jumbotron.text-center.mb-0
    %h2.h1= t(:welcome)
    .mb-res-50
      %p= t(:intro)
    = link_to t(:start), books_path, class: 'button btn btn-default'
  .mb-35
    %h3= t(:best)
    .row
      - @bestsellers.each do |book|
        .col-sm-6.col-md-3.book
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              = image_tag book.main_image_url(:small), class: 'img-shadow general-thumbnail-img'
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link{href: book_path(book)}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  = link_to cart_path(order: { order_item: { book_id: book, quantity: 1 } }), method: :put, class: 'thumb-hover-link' do
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500= t(:price, money: book.price)
              %p.title.mr-55= book.title
            %span.divider-sm
            %p.lead.small= book.all_authors
